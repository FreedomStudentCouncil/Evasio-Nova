rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 共通のヘルパー関数
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Wiki記事のルール - メインDB（詳細なコンテンツとコメント用）
    match /wikiArticles/{articleId} {
      // すべてのユーザーが記事を閲覧可能
      allow read: if true;
      
      // 認証済みユーザーのみ記事を作成可能
      allow create: if isAuthenticated();
      
      // 記事の更新は作成者のみ可能
      // 評価カウント（usefulCount, likeCount）はもう保存しないので、この条件は不要
      allow update: if isAuthenticated() && isOwner(resource.data.authorId);
      
      // 記事の削除は作成者のみ可能
      allow delete: if isAuthenticated() && isOwner(resource.data.authorId);
      
      // コメントのルール - コメントは記事のサブコレクション
      match /comments/{commentId} {
        // すべてのユーザーがコメントを閲覧・作成可能
        allow read: if true;
        allow create: if true;
        
        // コメントの更新・削除は作成者のみ可能
        // ただしいいねカウントの更新は誰でも可能
        allow update: if 
          (isAuthenticated() && isOwner(resource.data.authorId)) || 
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likeCount']));
        
        allow delete: if isAuthenticated() && isOwner(resource.data.authorId);
        
        // 返信のルール - 返信はコメントのサブコレクション
        match /replies/{replyId} {
          // すべてのユーザーが返信を閲覧・作成可能
          allow read: if true;
          allow create: if true;
          
          // 返信の更新・削除は作成者のみ可能
          // ただしいいねカウントの更新は誰でも可能
          allow update: if 
            (isAuthenticated() && isOwner(resource.data.authorId)) || 
            (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likeCount']));
            
          allow delete: if isAuthenticated() && isOwner(resource.data.authorId);
        }
      }
    }
    
    // ユーザープロファイルのルール
    match /users/{userId} {
      // プロフィールの読み取りはだれでも可能、書き込みは本人のみ
      allow read: if true;
      allow write: if isAuthenticated() && isOwner(userId);
    }
  }
}
